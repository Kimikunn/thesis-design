<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>上海大学数据平台|登录页</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/public/css/adminlte.min.css">
  <!-- icon -->
  <link rel="icon" href="/public/img/favicon.png" type="image/x-icon">
</head>

<body class="hold-transition register-page">
  <div class="register-box">
    <div class="register-logo">
      <a href="../dashboard">进入控制中心</a>
    </div>
    <div class="card">
      <div class="card-body register-card-body">
        <p class="login-box-msg">注册成为新用户！</p>
        <%- include ('./partials/message') %>
          <form action="./register" method="post">
            <div class="input-group mb-3">
              <input type="name" class="form-control" placeholder="请输入用户名" name='name' id="name"
                value="<%= typeof name != 'undefined' ? name : '' %>">
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input type="email" class="form-control" placeholder="请输入邮箱" name='email' id="email"
                value="<%= typeof email != 'undefined' ? email : '' %>">
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input type="password" class="form-control" placeholder="请输入密码(不少于6位)" name="password" id="password"
                value="<%= typeof password != 'undefined' ? password : '' %>">
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input type="password" class="form-control" placeholder="确认密码" name="password2" id="password2"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <div class="icheck-primary">
                  <input type="checkbox" id="agreeTerms" name="agreeTerms" value="agree">
                  <label for="agreeTerms">
                    我同意<a href="../privacy">相关协议</a>
                  </label>
                </div>
              </div>
              <!-- /.col -->
              <div class="col-4">
                <button type="submit" class="btn btn-primary btn-block">注册</button>
              </div>
              <!-- /.col -->
            </div>
          </form>



          <a href="login" class="text-center">我已拥有账户</a>
      </div>
      <!-- /.form-box -->
    </div><!-- /.card -->
  </div>
  <!-- /.register-box -->

  <!-- jQuery -->
  <script src="/plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/public/js/adminlte.min.js"></script>
</body>

</html>